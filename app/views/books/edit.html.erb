<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
<div class="field">
  <label class="book_title">Title</label>
  <%= f.text_field :title, class: "book_title" %>
</div>

<div class="field">
  <label class="book_body">Body</label>
  <%= f.text_area :body, class: "book_body" %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>

<% end %>
<%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %>
 | <%= link_to "Back", books_path(), class: "back" %>