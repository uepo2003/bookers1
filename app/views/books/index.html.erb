<div class="notice">
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
  <table>
    <thead>
      <tr class="">
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
        <td><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
        <td><%= link_to "Destroy", destroy_book_path(book.id), class: "destroy_#{book.id}", method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    </tbody>
  <% end %>
  </table>

<h2>New book</h2>

<%= form_with model: @book, url: books_path, class: "new_book", method: :post do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title, class: "book_title" %>
</div>

<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body, class: "book_body" %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>

<% end %>